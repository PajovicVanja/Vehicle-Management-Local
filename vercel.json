{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "frontend/build" } }
  ],
  "routes": [
    { "src": "^/api/auth/(.*)$",        "dest": "/api/auth/[...path].js?path=$1" },
    { "src": "^/api/vehicle/(.*)$",     "dest": "/api/vehicle/[...path].js?path=$1" },
    { "src": "^/api/reservation/(.*)$", "dest": "/api/reservation/[...path].js?path=$1" },
    { "src": "^/api/health$",           "dest": "/api/health.js" },

    { "handle": "filesystem" },
    { "src": "^(?!/api/).*", "dest": "/index.html" }
  ]
}
